{
  "appId": "com.drivebox.app",
  "productName": "DriveBox",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "data/**/*",
    "assets/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "signAndEditExecutable": false,
    "signDlls": false
  },
  "portable": {
    "artifactName": "DriveBox-${version}-portable.exe"
  },
  "publish": null,
  "compression": "maximum",
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
