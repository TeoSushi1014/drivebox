# DriveBox Update Configuration

# Auto-update settings for better reliability

## Update Check Settings
AUTO_CHECK_ENABLED=true
CHECK_INTERVAL_HOURS=1
STARTUP_CHECK_DELAY_SECONDS=30
RATE_LIMIT_MINUTES=5

## Update Sources (in order of preference)
UPDATE_SOURCES=github_api,github_releases,manual_fallback

## GitHub API Configuration
GITHUB_API_URL=https://api.github.com/repos/TeoSushi1014/drivebox/releases/latest
GITHUB_USER_AGENT=DriveBox-App
GITHUB_ACCEPT=application/vnd.github.v3+json

## GitHub Releases Fallback
GITHUB_RELEASES_URL=https://github.com/TeoSushi1014/drivebox/releases/latest
GITHUB_RELEASES_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

## Download Settings
DOWNLOAD_TIMEOUT_SECONDS=120
DOWNLOAD_RETRIES=5
DOWNLOAD_BACKOFF_MULTIPLIER=2
MAX_DOWNLOAD_SIZE_MB=500
MIN_DOWNLOAD_SIZE_MB=5

## Installation Settings
AUTO_DOWNLOAD=false
AUTO_INSTALL=false
CREATE_BACKUP=true
BACKUP_RETENTION_DAYS=7
UPDATE_CLEANUP_HOURS=24

## Validation Settings
VALIDATE_PE_HEADER=true
VALIDATE_FILE_INTEGRITY=true
VALIDATE_DIGITAL_SIGNATURE=false

## Network Settings
REQUEST_TIMEOUT_SECONDS=10
CONNECTION_RETRIES=3
USE_PROXY=false
PROXY_URL=

## Notification Settings
SHOW_UPDATE_NOTIFICATIONS=true
SHOW_DOWNLOAD_PROGRESS=true
SHOW_ERROR_NOTIFICATIONS=true
AUTO_CLOSE_SUCCESS_NOTIFICATIONS_SECONDS=3

## Debug Settings
DEBUG_UPDATE_PROCESS=true
LOG_UPDATE_ATTEMPTS=true
VERBOSE_ERROR_LOGGING=true

## Fallback Settings
ENABLE_MANUAL_DOWNLOAD=true
MANUAL_DOWNLOAD_URL=https://github.com/TeoSushi1014/drivebox/releases/latest
FALLBACK_CHECK_INTERVAL_HOURS=6

## Security Settings
VERIFY_HTTPS_CERTIFICATES=true
ALLOW_INSECURE_DOWNLOADS=false
REQUIRED_FILE_EXTENSIONS=.exe
ALLOWED_DOWNLOAD_DOMAINS=github.com,raw.githubusercontent.com
