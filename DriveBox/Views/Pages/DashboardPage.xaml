<Page
    x:Class="DriveBox.Views.Pages.DashboardPage"
    x:Name="DashboardPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DriveBox.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:DriveBox.ViewModels.Pages"
    xmlns:helpers="clr-namespace:DriveBox.Helpers"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance vm:DashboardViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
    </Page.Resources>

    <Grid>
        <Border Background="{DynamicResource ApplicationBackgroundBrush}"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ui:ProgressRing Width="60" 
                                 Height="60"
                                 IsIndeterminate="True"
                                 Margin="0,0,0,20"/>
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Đang tải...'}"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Background="{DynamicResource ApplicationBackgroundBrush}"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="400">
                <Border Width="80" 
                         Height="80"
                         Background="{DynamicResource SystemFillColorCriticalBrush}"
                         CornerRadius="40"
                         Margin="0,0,0,20">
                    <TextBlock Text="⚠️" 
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Có lỗi xảy ra"
                           FontSize="20"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                <TextBlock Text="{Binding ErrorMessage, FallbackValue='Không thể tải danh sách ứng dụng'}"
                           FontSize="16"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

            </StackPanel>
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,20,20,10">
                <TextBlock Text="Kho Ứng Dụng" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"/>
                
                                 <Grid>
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="*"/>
                         <ColumnDefinition Width="Auto"/>
                     </Grid.ColumnDefinitions>
                     
                     <ui:TextBox Grid.Column="0"
                                PlaceholderText="Tìm kiếm ứng dụng..."
                                Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="17"
                                Margin="0,0,10,0"/>
                     

                     

                 </Grid>
            </StackPanel>



            <Grid Grid.Row="1">
                <ItemsControl ItemsSource="{Binding FilteredApps}"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             Margin="20,0,20,20"
                             Visibility="{Binding FilteredApps.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=invert}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="340" 
                                        Height="420"
                                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Margin="0,0,15,15"
                                        Padding="16"
                                        ClipToBounds="True"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Page}}">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Kiểm tra trạng thái cài đặt"
                                                      Command="{Binding PlacementTarget.Tag.CheckInstallationStatusCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Kiểm tra tính toàn vẹn"
                                                      Command="{Binding PlacementTarget.Tag.VerifyAppCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"
                                                      Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <MenuItem Header="Gỡ cài đặt"
                                                      Command="{Binding PlacementTarget.Tag.UninstallAppCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"
                                                      Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>


                                        <Border Grid.Row="0"
                                                Width="48"
                                                Height="48"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,12"
                                                Background="{DynamicResource SystemFillColorNeutralBrush}"
                                                CornerRadius="8">
                                            <Grid>
                                                <Image Source="{Binding IconPath, FallbackValue=''}"
                                                       Width="40"
                                                       Height="40"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       RenderOptions.BitmapScalingMode="HighQuality">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Style.Triggers>

                                                                <DataTrigger Binding="{Binding IconPath}" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>

                                                <ui:SymbolIcon Symbol="Apps24" 
                                                               FontSize="24"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center">
                                                    <ui:SymbolIcon.Style>
                                                        <Style TargetType="ui:SymbolIcon">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>

                                                                <DataTrigger Binding="{Binding IconPath, Converter={StaticResource StringNullOrEmptyToBoolean}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:SymbolIcon.Style>
                                                </ui:SymbolIcon>
                                            </Grid>
                                        </Border>

                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding TenHienThi, FallbackValue='[No Title]'}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="60"
                                                   LineHeight="22"
                                                   Margin="0,0,0,8"/>

                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding MoTa, FallbackValue='[No Description]'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="110"
                                                   LineHeight="18"
                                                   Margin="0,0,0,8"/>

                                        <StackPanel Grid.Row="3" 
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,8">
                                            <TextBlock Text="Phiên bản: "
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding PhienBan, FallbackValue='[No Version]'}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>


                                        <StackPanel Grid.Row="4" 
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,8"
                                                    Visibility="{Binding VerificationResult, Converter={StaticResource NullToVisibilityConverter}}">
                                            <ui:SymbolIcon Symbol="{Binding VerificationResult.TrustLevelIcon, FallbackValue='Question24'}"
                                                           FontSize="14"
                                                           Foreground="{Binding VerificationResult.TrustLevelColor, FallbackValue='#9E9E9E'}"
                                                           Margin="0,0,6,0"
                                                           VerticalAlignment="Center"/>
                                            <TextBlock Text="Bảo mật: "
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding VerificationResult.TrustLevelDescription, FallbackValue='Chưa xác thực'}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding VerificationResult.TrustLevelColor, FallbackValue='#9E9E9E'}"
                                                       ToolTip="{Binding VerificationResult.VerificationMessage}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="5" 
                                                    Orientation="Vertical"
                                                    Margin="0,0,0,8">
    
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="Kích thước: "
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding TotalSizeFormatted, FallbackValue='Đang tính...'}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"/>
                                                           
        
                                                <TextBlock Text="{Binding ModuleInfoDisplay}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="8,0,0,0"
                                                           Visibility="{Binding ModuleInfoDisplay, Converter={StaticResource StringToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
    
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Thư mục: "
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding ThuMucCaiDat, FallbackValue='Program Files'}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>

                                        </StackPanel>







                                        <StackPanel Grid.Row="9" 
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,12,0,0">
                                            


                                            
    
                                            <ui:Button FontSize="15"
                                                       Icon="ArrowDownload24"
                                                       Appearance="Primary"
                                                       Command="{Binding DataContext.DownloadAppCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=Page}}"
                                                       CommandParameter="{Binding}"
                                                       Visibility="{Binding IsInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                                       IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBooleanConverter}}"
                                                       Margin="0,0,0,0"
                                                       MinWidth="130"
                                                       Height="36"
                                                       Padding="8,4"
                                                       ToolTip="Tải xuống và cài đặt ứng dụng"
                                                       CornerRadius="6">
                                                <StackPanel Orientation="Horizontal">
                                                    <ui:SymbolIcon Symbol="ArrowDownload24" 
                                                                 Margin="0,0,6,0"
                                                                 Visibility="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                    <ui:ProgressRing Width="16" Height="16" 
                                                                   IsIndeterminate="True"
                                                                   Margin="0,0,6,0"
                                                                   Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <TextBlock VerticalAlignment="Center"
                                                               Foreground="Black">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Tải xuống"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                        <Setter Property="Text" Value="Đang tải..."/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </ui:Button>
                                                           
    
                                            <ui:Button Content="Mở"
                                                       FontSize="14"
                                                       Icon="Play24"
                                                       Appearance="Secondary"
                                                       Command="{Binding DataContext.OpenAppCommand, 
                                                                  ElementName=DashboardPageRoot}"
                                                       CommandParameter="{Binding}"
                                                       Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       Margin="0,0,8,0"
                                                       MinWidth="80"
                                                       Height="32"
                                                       CornerRadius="6"
                                                       ToolTip="Mở ứng dụng đã cài đặt"/>
                                                           
    
                                            <ui:Button Content="Kiểm tra"
                                                       FontSize="14"
                                                       Icon="Wrench24"
                                                       Appearance="Secondary"
                                                       Command="{Binding DataContext.VerifyAppCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=Page}}"
                                                       CommandParameter="{Binding}"
                                                       Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       Margin="0,0,8,0"
                                                       MinWidth="120"
                                                       Height="32"
                                                       CornerRadius="6"
                                                       ToolTip="Kiểm tra cấu trúc files, dependencies và sửa shortcuts (cần quyền Admin)"/>
                                                           
    
                                            <ui:Button Content="Gỡ cài đặt"
                                                       FontSize="14"
                                                       Icon="Delete24"
                                                       Appearance="Danger"
                                                       Command="{Binding DataContext.UninstallAppCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=Page}}"
                                                       CommandParameter="{Binding}"
                                                       IsEnabled="{Binding IsUninstalling, Converter={StaticResource InverseBooleanConverter}}"
                                                       Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       MinWidth="100"
                                                       Height="32"
                                                       CornerRadius="6"
                                                       ToolTip="Gỡ cài đặt ứng dụng"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Margin="20"
                        Visibility="{Binding FilteredApps.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Border Width="80" 
                                 Height="80"
                                 Background="{DynamicResource SystemFillColorNeutralBrush}"
                                 CornerRadius="40"
                                 Margin="0,0,0,25">
                            <TextBlock Text="APP" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Border>
                        <TextBlock Text="Không tìm thấy ứng dụng nào"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="Thử tìm kiếm với từ khóa khác"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>


            <Border Grid.Row="2" 
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="20,0,20,20"
                    Padding="16"
                    Visibility="{Binding HasActiveDownloads, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowDownload24" 
                                           FontSize="20" 
                                           Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="Đang tải xuống"/>
                                <Run Text="{Binding TotalActiveDownloads, StringFormat='({0} app)', Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        

                        <ui:Button Grid.Column="1"
                                   Content="Hủy tất cả"
                                   FontSize="13"
                                   Icon="DismissCircle24"
                                   Appearance="Danger"
                                   Command="{Binding CancelAllDownloadsCommand}"
                                   IsEnabled="{Binding CanCancelDownloads}"
                                   MinWidth="90"
                                   Height="32"
                                   Padding="8,4"
                                   ToolTip="Hủy tất cả tải xuống"/>
                    </Grid>
                    

                    <ItemsControl ItemsSource="{Binding ActiveDownloads}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="0,0,0,8"
                                            Padding="12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            

                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                          Text="{Binding AppTitle}" 
                                                          FontSize="15" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          VerticalAlignment="Center"/>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">

                                                    <ui:Button Content="{Binding IsPaused, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Tiếp tục|Dừng'}"
                                                               FontSize="10"
                                                               Appearance="Secondary"
                                                               Command="{Binding PauseResumeCommand}"
                                                               IsEnabled="{Binding DataContext.CanCancelDownloads, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               MinWidth="50"
                                                               Height="26"
                                                               Padding="4,2"
                                                               Margin="0,0,4,0"
                                                               ToolTip="{Binding IsPaused, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Tiếp tục tải xuống|Tạm dừng tải xuống'}"/>
                                                    

                                                    <ui:Button Content="Hủy"
                                                               FontSize="10"
                                                               Appearance="Danger"
                                                               Command="{Binding CancelCommand}"
                                                               IsEnabled="{Binding DataContext.CanCancelDownloads, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               MinWidth="40"
                                                               Height="26"
                                                               Padding="4,2"
                                                               ToolTip="Hủy tải xuống"/>
                                                </StackPanel>
                                            </Grid>
                                            

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding ProgressText}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="0,0,0,6"/>
                                            

                                            <Grid Grid.Row="2" Margin="0,0,0,6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <ProgressBar Grid.Column="0"
                                                             Height="8"
                                                             Value="{Binding ProgressPercentage}"
                                                             Minimum="0"
                                                             Maximum="100"
                                                             Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                                             Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                                
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding ProgressPercentage, StringFormat={}{0:F0}%}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                            

                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DownloadSpeed}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding EstimatedTimeRemaining}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                                

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding SizeInformation}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
